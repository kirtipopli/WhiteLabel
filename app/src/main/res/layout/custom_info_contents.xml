<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_listItemMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:paddingStart="@dimen/viewSpacing_16dp"
        android:paddingEnd="@dimen/viewSpacing_16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff000000"
            android:textStyle="bold"
            tools:text="title" />

        <TextView
            android:id="@+id/snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textColor="#ff7f7f7f"
            tools:text="address" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/snippet"
            android:layout_marginTop="@dimen/viewSpacing_10dp"
            android:layout_marginBottom="@dimen/viewSpacing_16dp"
            android:background="@color/colorBlackMedium" />
    </RelativeLayout>

</layout>
